{
    "linters": {
        "enable": [
            "depguard",
            "dupl",
            "exportloopref",
            "gofmt",
            "goimports",
            "golint",
            "govet",
            "unconvert",
            "whitespace"
        ]
    },
    "linters-settings": {
        "gofmt": {
            "simplify": true
        },
        "govet": {
            "enable-all": true,
            "disable": [
                "composites",
                "fieldalignment",
                "shadow"
            ]
        },
        "depguard": {
            "list-type": "whitelist",
            "include-go-root": false,
            "packages": [
                "golang.org",
                "goarrg.com"
            ]
        }
    },
    "issues": {
        "exclude": [
            ".*string `windows` has \\d+ occurrences, make it a constant",
            ".*string `linux` has \\d+ occurrences, make it a constant",
            ".*string `darwin` has \\d+ occurrences, make it a constant"
        ]
    }
}
